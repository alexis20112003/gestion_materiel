{% extends "main.html.twig" %}
{% block body %}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
	<script type="text/javascript" src="../Js/fonctions.js"></script>
	<div>
		<h3>titre page gestion ordi</h3>
		<!-- sqlcount pour la pagination -->
		<!-- mettre variable qui prend +1 a chaque boucle en twig -->
		<!-- fonction ajax en onclic pour mes onglet -->
		{# document ready #}


			<div class="col py-3"> <ul class="nav nav-tabs" id="myTab" role="tablist">
				{% for item in icon %}
					{% if item == icon[0] %}

						<li class="nav-item" onclick="changeMat({{item.id_type_materiel}});">
							<a class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
								<i class="{{item.icon}}"></i>
								{{item.origine_materiel}}</a>
						</li>
					{% else %}
						<li class="nav-item" onclick="changeMat({{item.id_type_materiel}});">
							<a class="nav-link" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
								<i class="{{item.icon}}"></i>
								{{item.origine_materiel}}</a>
						</li>
					{% endif %}
				{% endfor %}
			</ul>
			<div class="tab-content" id="myTabContent">
				{% for item in icon %}
					{% if item == icon[0] %}
						{% block listeActive %}{% endblock %}
					{% else %}
						{% block liste %}{% endblock %}
					{% endif %}
				{% endfor %}
			</div>
		</div>


	</div>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}
