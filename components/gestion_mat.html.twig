{% block body %}
	<div>
		<script>
			$(document).ready(function () {
changeMat(1);
});
		</script>
		<h3>Inventaire Materiel</h3>
		<!-- sqlcount pour la pagination -->
		<h6 onclick="pageAddMat();">add mat</h6>
		<!-- mettre variable qui prend +1 a chaque boucle en twig -->


		<div class="col py-3">
			<ul class="nav nav-tabs" id="myTab" role="tablist">
				{% for item in icon %}
					{% if item == icon[0] %}

						<li class="nav-item" onclick="changeMat({{item.id_type_materiel}});">
							<a class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
								<i class="{{item.icon}}"></i>
								{{item.origine_materiel}}</a>
						</li>
					{% else %}
						<li class="nav-item" onclick="changeMat({{item.id_type_materiel}});">
							<a class="nav-link" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
								<i class="{{item.icon}}"></i>
								{{item.origine_materiel}}</a>
						</li>
					{% endif %}
				{% endfor %}
				<li class="nav-item" onclick="">
					<a class="nav-link" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
						<i class="fa-solid fa-plus"></i>
						add
					</a>
				</li>
			</ul>
			<div class="tab-content" id="myTabContent">
				{% for item in icon %}
					{% if item == icon[0] %}
						{% block listeActive %}{% endblock %}
					{% else %}
						{% block liste %}{% endblock %}
					{% endif %}
				{% endfor %}
			</div>
		</div>


	</div>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}
