{% block body %}
	<div>
	<div class="row">
			<div class="col-3 pt-4">
				<h3>Inventaire du Materiel</h3>
			</div>
			<div class="col-7">
			</div>
			<div class="col-2 pt-4">	
				<bouton onclick="modalAddMateriel();" class="btn border border-dark" >Nouveau Materiel </bouton>
			</div>
		</div>
	
		<div class="col py-3">
			<ul class="nav nav-tabs" id="myTab" role="tablist">
				{% for item in icon %}
					{% if item == icon[0] %}

						<li class="nav-item" onclick="loadMateriel({{item.id_type_materiel}});">
							<a class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
								<i class="{{item.icon}}"></i>
								{{item.origine_materiel}}</a>
						</li>
					{% else %}
						<li class="nav-item" onclick="loadMateriel({{item.id_type_materiel}});">
							<a class="nav-link" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
								<i class="{{item.icon}}"></i>
								{{item.origine_materiel}}</a>
						</li>
					{% endif %}
				{% endfor %}
				<li class="nav-item" onclick="modalAddTypeMateriel();">
					<a class="nav-link" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
						<i class="fa-solid fa-plus"></i>
						add
					</a>
				</li>
			</ul>
			<form action="javascript:deleteMateriel();">
				<div class="tab-content overflow-auto tabSize" id="myTabContent">
					{% for item in icon %}
						{% if item == icon[0] %}
							{% block listeActive %}{% endblock %}
						{% else %}
							{% block liste %}{% endblock %}
						{% endif %}
					{% endfor %}
				</div>
				<button type="submit">
					<i class="fa-solid fa-trash"></i>
					delete</button>
			</form>
		</div>
	</div>

	<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">

				
			</div>
		</div>
	</div>
{% endblock %}
