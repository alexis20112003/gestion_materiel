{% block body %}
	<div class="col py-3">
		<ul class="nav nav-tabs" id="myTab" role="tablist">
			{% for item in icon %}
				{% if item == icon[0] %}

					<li class="nav-item" onclick="chargeMaterielDemande('{{item.id_type_materiel}}', '{{date_debut}}', '{{date_fin}}');">
						<a class="nav-link active" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
							<i class="{{item.icon}}"></i>
							{{item.origine_materiel}}</a>
					</li>
				{% else %}
					<li class="nav-item" onclick="chargeMaterielDemande('{{item.id_type_materiel}}', '{{date_debut}}', '{{date_fin}}');">
						<a class="nav-link" id="home-tab" data-toggle="tab" role="tab" aria-controls="home" aria-selected="true">
							<i class="{{item.icon}}"></i>
							{{item.origine_materiel}}</a>
					</li>
				{% endif %}
			{% endfor %}
		</ul>
		<form action="javascript:insertDemandeMateriel('{{date_debut}}', '{{date_fin}}');">
			<div class="tab-content overflow-auto tabSize" id="myTabContent">
				{% block listeActive %}{% endblock %}
			</div>
			<button type="submit">
				<i class="fa-solid fa-cart-shopping"></i>
				Demande</button>
		</form>
	</div>
{% endblock %}
