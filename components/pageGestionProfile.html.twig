<body>
	<div class="row">
		<div class="col-9 rounded-pill bg-image profileBanner position-relative mt-2 ms-4" style="background-image: url({{user.img_banniere}});">
			<button onclick="modalUpdateImageBanniere();" type="button" class="btn btn-primary btn-circle imgBanniereBtn position-absolute">
				<i class="fa-solid fa-pencil"></i>
			</button>
			<img class="imgProfile img-fluid rounded-circle border border-2 border-dark position-absolute" src="{{user.img_profile}}"/><button onclick="modalUpdateImageProfile();" type="button" class="btn btn-primary btn-circle imgProfileBtn position-absolute">
				<i class="fa-solid fa-pencil"></i>
			</button>
		</div>
	</div>

	<div class="row">
		<div class="col-3"></div>
		<div class="col-4">
			<div class="row mt-5 mt-md-3 mt-lg-5">
				<div class="col-12 col-lg-6 mt-lg-5 profileText d-flex justify-content-between">
					<span class="boldText">Nom:</span>
					{{user.nom}}
				</div>
				<div class="col-12 col-lg-6 ps-1 mt-3 mt-lg-5 profileText d-flex justify-content-between">
					<span class="boldText">Prenom:</span>
					{{user.prenom}}
				</div>
			</div>

			<div class="col mt-5 d-flex justify-content-evenly ps-3 pe-5 profileText">
				<span class="boldText">E-mail:</span>
				{{user.email}}
			</div>

			<div class="row mt-5">
				<div class="col-12 col-lg-6 profileText d-flex justify-content-between">
					<span class="boldText">Statut:</span>
					{{user.statut}}
				</div>
				<div class="col-12 col-lg-6 ps-1 mt-3 mt-lg-0 profileText d-flex justify-content-between">
					<span class="boldText">Promo:</span>
					{{user.promo}}
				</div>
			</div>
		</div>
	</div>
	<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content"></div>
		</div>
	</div>
</body>
