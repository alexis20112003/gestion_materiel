{% block listeActive %}
	<div class="tab-pane fade show active" role="tabpanel" aria-labelledby="home-tab">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col"></th>
					<th scope="col">nom ordinateur</th>
					<th scope="col">desc</th>
					<th scope="col"></th>
					<th scope="col"></th>					
				</tr>
			</thead>
				<tbody>
					{% for item in type %}
						<tr>
							<th onclick="modalDetailMateriel({{item.id_materiels}}) ;"><i class="fa-solid fa-eye"></i></th>
							<td>{{item.nom_materiel}}</td>
							<td>{{item.description}}</td>
							<td  onclick="modalUpdateMateriel({{item.id_materiels}}) ;" ><i class="fa-solid fa-pencil" ></i></td>
							<td>
								<input class="checkbox_check form-check-input" type="checkbox" value="{{item.id_materiels}}" id="flexCheckDefault">
							</td>
						</tr>
					{% endfor %}
				</tbody>
		</table>
	</div>
{% endblock %}